dim index as long    //索引指数
dim strx as string   //将原字符串str截片后得各部分字符串
dim stry as string
dim strz as string

dim shared objlocaton as location
//定义通讯协议，前五位为x,
//通讯（接受上位机发给控制器的位置数据）
ret = s.listen(8080)
while 1
//循环查询是否有数据输出
    sleep 200   //休眠，避免死循环，无法执行其他程序
